<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ibZoomin"
            android:src="@drawable/zoom_in"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"/>
        <ImageButton
            android:id="@+id/ibZoomout"
            android:src="@drawable/zoom_out"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"/>
        <ImageButton
            android:id="@+id/ibRotate"
            android:src="@drawable/rotate"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"/>
        <ImageButton
            android:id="@+id/ibBright"
            android:src="@drawable/brightness_plus"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"/>
        <ImageButton
            android:id="@+id/ibDark"
            android:src="@drawable/brightness_min"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp" />
        <ImageButton
            android:id="@+id/ibGray"
            android:src="@drawable/satur"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pictureLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:gravity="center"
        android:orientation="vertical">

    </LinearLayout>


</LinearLayout>